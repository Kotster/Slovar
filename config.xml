<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	
	<bean id="slovarOne" class="com.example.Controller.Slovar">
			<constructor-arg index="0">
				<bean class="java.io.File">
					<constructor-arg value="slovar5Num"/>
				</bean>
			</constructor-arg>
			<constructor-arg index="1" value="4"/>
			<constructor-arg index="2" value="^[a-zA-Z]+$"/>
	</bean>
	
	<bean id="slovarTwo" class="com.example.Controller.Slovar">
			<constructor-arg index="0">
				<bean class="java.io.File">
					<constructor-arg value="slovar4Lat"/>
				</bean>
			</constructor-arg>
			<constructor-arg index="1" value="5"/>
			<constructor-arg index="2" value="^[0-9]+$"/>
	</bean>
	
	
</beans>							